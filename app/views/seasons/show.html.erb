<div id="fullbox">
    <div id="tabs">
        <% cache_unless_admin(@current_user, "seasonPage-" + @season.id.to_s + "-" + @weeK_num.to_s) do %>
    		<%- @seasons.each do |season| %>
                <%unless season.active.nil?%>
            	   <%= link_to season.title, season, :class => "tab " + (@season == season ? "active" : "nonactive") %>
                <%end%>
            <% end %>
            <div style="clear: both"></div>
            <div class="TabsContainer">
                <div class="tabbody3 active">
                    <%if @season.id == 3 %>
                        <iframe src="http://challonge.com/ec24l8q4/module" width="1100px" height="1000px" frameborder="0" scrolling="auto" allowtransparency="true"></iframe>
                    <%elsif @season.id == 4%>
                        <iframe src="http://challonge.com/j0quwvjr/module" width="1100px" height="1000px" frameborder="0" scrolling="auto" allowtransparency="true"></iframe>
                    <%else%>
                        <div class="col-sm-4">
                            <h2 class="rankings">Rankings</h2>
                            <% @teams_by_division.each do |division, team_seasons| %>
                                <table class="table table-hover table-bordered">
                                    <thead>
                                        <% if @teams_by_division.size > 1 %>
                                            <tr>
                                                <th colspan=3>Division <%= division %></th>
                                            </tr>
                                        <% end %>
                                        <tr>
                                            <%if @teams_by_division.size > 1 %>
                                                <th>Place</th>
                                            <%end%>
                                            <th>Name</th>
                                            <th>Wins</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% team_seasons.sort_by{|ts| @total_scores[ts.team_id] }.reverse.each_with_index do |team_season, index| %>
                                            <tr>
                                                <%if @teams_by_division.size > 1 %>
                                                    <td><%= index + 1 %></td>
                                                <%end%>
                                                <td><%= link_to team_season.team.teamname, team_season.team %></td>
                                                <td><%= @total_scores[team_season.team_id].to_i %></td>
                                            </tr>
                                        <%end%>
                                    </tbody>
                                </table>
                            <%end%>
                        </div>
                        <div class="col-sm-8 col-sm-offset-0 col-md-6 col-md-offset-2">
                            <h2>Schedule</h2>
                            <ul class="list-inline week-selector">
                                <% @season.matches.pluck(:week).uniq.sort.each do |week_num| %>
                                    <li><%= link_to week_num, {:week => week_num}, "data-week" => week_num, :class => ("active" if week_num == @week_num) %></li>
                                <% end %>
                            </ul>
                            <% @season.matches.pluck(:week).uniq.sort.each do |week_num| %>
                                <div class="week-holder" id="week_<%= week_num %>" style='<%= "display: none;" unless @week_num == week_num %>'>
                                    <%= render :partial => "matches/match_table", :object => @matches.select{|m| m.week == week_num } %>
                                </div>
                            <% end %>
                        </div>
                    <%end%>
                </div>
            </div>
        <% end %>
    </div>
</div>