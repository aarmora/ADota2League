<div id="fullbox">
    <div id="tabs">
        <% cache("seasonPage-" + @season.id.to_s) do %>
    		<%- @seasons.each do |season| %>
            	<%= link_to season.title, season, :class => "tab " + (@season == season ? "active" : "nonactive") %>
            <% end %>
            <div style="clear: both"></div>
            <div class="TabsContainer">
                <div class="tabbody3 active">
                    <div class="col-sm-4">
                        <h2>Rankings</h2>
                        <% @teams_by_division.each do |division, team_seasons| %>
                            <table class="table table-hover table-bordered">
                                <thead>
                                    <% if @teams_by_division.size > 1 %>
                                        <tr>
                                            <th colspan=3>Division <%= division %></th>
                                        </tr>
                                    <% end %>
                                    <tr>
                                        <%if @teams_by_division.size > 1 %>
                                            <th>Place</th>
                                        <%end%>
                                        <th>Name</th>
                                        <th>Wins</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% team_seasons.sort_by{|ts| @total_scores[ts.team_id] }.reverse.each_with_index do |team_season, index| %>
                                        <tr>
                                            <%if @teams_by_division.size > 1 %>
                                                <td><%= index + 1 %></td>
                                            <%end%>
                                            <td><%= link_to team_season.team.teamname, team_season.team %></td>
                                            <td><%= @total_scores[team_season.team_id].to_i %></td>
                                        </tr>
                                    <%end%>
                                </tbody>
                            </table>
                        <%end%>
                    </div>
                    <div class="col-sm-8 col-sm-offset-0 col-md-6 col-md-offset-2">
                        <h2>Schedule</h2>
                        <%= render :partial => "matches/match_table", :object => @matches %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>