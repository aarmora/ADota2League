<div class="container-fluid">
	<div class="row">
		<div class="col-md-5">
			<h3><%= link_to @match.home_team.teamname, @match.home_team %></h3>
			<%@home_team_roster.each do |player|%>
				<%= link_to player.name, player%>
			<%end%>
		</div>
		<div class="col-md-2">
			<h3>vs</h3>
		</div>
		<div class="col-md-5">
			<h3><%= link_to @match.away_team.teamname, @match.away_team %></h3>
			<%@away_team_roster.each do |player|%>
				<%= link_to player.name, player%>
			<%end%>
		</div>
	</div>  
</div>
<br>
<br>
<%=@mytest%>
<div class="container-fluid">
	<%
	#Note: form_for matches is a PH only.  It will be matchcomments
	form_for "Player" do |f|%>
	  <div class="form-group">
	  	<%= f.label(:name, "Comment")%>
	  	<%= f.cktext_area :name, :placeholder => "matchcomments go here"%>
	  </div>
	  <%= f.submit "Submit", :class => "button"%>
	<%end%>
</div>