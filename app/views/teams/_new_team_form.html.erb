<%= form_for Team.new, remote: remote, format: remote ? :json : nil, :html => { :class => "form-horizontal", :role => "form"} do |f| %>
  <div class="form-group">
    <%= f.label :name, "Team Name", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div  class="form-group">
    <%= f.label :originalmmr, "Estimated MMR?", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :originalmmr, :class => "form-control" %>
      <p class="help-block">Average your 5-player's MMRs to give us an idea of who to match you up against initially. (e.g. "3200", numeric only please!)</p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Region?</label>
    <div class="col-sm-10">
      <div class="radio">
        <label>
          <%= f.radio_button :region, 'EU' %>
          EU
        </label>
      </div>
      <div class="radio">
        <label>
          <%= f.radio_button :region, 'NA' %>
          NA
        </label>
      </div>
    </div>
  </div>
  <%= f.submit "Create team", :confirm => "Are you sure you want to create a new team?", :class => "button", data: {disable_with: "Creating Team..."} %>
<% end %>