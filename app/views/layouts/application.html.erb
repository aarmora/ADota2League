<!DOCTYPE html>
<html>
<head>
  <%=favicon_link_tag 'ad2l.ico'%>

  <title><%= content_for?(:page_subtitle) ? yield(:page_subtitle) + " - " : "" %>Amateur Dota 2 League</title>
   <meta name="description" content="
  <%= content_for?(:meta_description) ? yield(:meta_description) : "The Amateur Dota 2 League enables non-professional DotA players to play in a competitive environment with both season-based and weekend tournaments." %>">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
  <%= javascript_include_tag "angular-sanitize" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_tag "const AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
  <%= javascript_tag "const USER_TZ = '#{user_js_tz_name}';" %>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/select2/3.4.6/select2.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="logo" class="container">
		<!-- Twitch container -->
		<% unless @active_streams.empty? %>
		    <div id="LiveGames" style="top: -<%= @active_streams.count * 55%>px">
		    	<table>
		    	<% @active_streams.each do |stream| %>
		    		<tr>
		    			<td class="twitchtitle"><%= link_to stream.channel.status, stream.channel.url, :target => "_blank" %></td>
		    			<td class="twitchlink"><%= link_to stream.channel.display_name, stream.channel.url, :target => "_blank" %></td>
		    		</tr>
			    <% end %>
			    </table>
		    	<div id="LiveGames-Callout">Games are live right now! <i class="glyphicon glyphicon-chevron-down"></i></div>
		    </div>
	    <% end %>

	  <!-- Main Header, hidden on mobile -->
	  <div class="hidden-xs">
			<h1>
				<a href="/">Amateur <span>Dota</span> 2 League</a>
				<% if @current_user %>
					<div id="current-user"><%= image_tag session[:current_user][:image], :alt => "" %>
						<span><%= session[:current_user][:nickname] %></span>
						<br />
						<%= link_to 'Logout', logout_url, :class => 'logout' %>
					</div>
				<%else%>
					<%= link_to image_tag("http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_small.png"), '/auth/steam', :class => 'steamsignin', :style => "float:right" %>
				<% end %>
			</h1>
	    <div style="font-size: 10px; color:#919191; float:left; font-weight: bold; ">For those of us not as good as [A]lliance.</div>
	  </div>
	</div>
	<nav class="navbar navbar-ad2l container" role="navigation">
		<div class="navbar-header visible-xs">
			<div class="navbar-brand">Amateur <span>Dota</span> 2 League</div>
			<button type="button" class="pull-right navbar-toggle" data-toggle="collapse" data-target="#ad2l-main-nav-collapse">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
			<div class="pull-right user-in-bar">
				<% if @current_user %>
						<%= image_tag session[:current_user][:image], :alt => "" %>
						<span class="handle"><%= session[:current_user][:nickname] %></span>
				<%else%>
						<%= link_to image_tag("http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_small.png"), '/auth/steam', :class => 'steamsignin', :style => "float:right" %>
				<% end %>

			</div>


    </div>
		<ul class="nav navbar-nav collapse navbar-collapse" id="ad2l-main-nav-collapse">
			<li <%if @current_tab == 'index'%> class="active" <%end%> >
				<%= link_to "Home", root_path %>
			</li>
			<li <%if @current_tab == 'seasons'%>class="dropdown active"<%else%>class="dropdown"<%end%>>
				<%= link_to "Schedule", seasons_path, :class => "dropdown-toggle", :"data-toggle" => "dropdown" %>
        <ul class="dropdown-menu">
					<%- @all_seasons.each do |season| %>
	            <% unless season.active == false %>
	        	  	<li><%= link_to season.title, season %></li>
	            <%end%>
	        <% end %>
        </ul>
    	</li>
			<li <%if @current_tab == 'inhouse'%> class="active" <%end%>>
				<%= link_to "Inhouses", inhouse_path(1) %>
			</li>
			<li <%if @current_tab == 'freeagents'%> class="active" <%end%>>
				<%= link_to "Free Agents", players_path %>
			</li>
			<%if @current_user%>
		        <li <%if @current_tab == 'myinfo'%> class="active" <%end%>  >
	        		<%= link_to "My Info/Teams", @current_user %>
	        	</li>
	        <%end%>
	        <li <%if @current_tab == 'register'%> class="active" <%end%>  >
        		<%= link_to "Register!", "/register" %>
        	</li>
			<li <%if @current_tab == 'community'%> class="active" <%end%> >
				<%= link_to "Community", community_path%>
			</li>
		</ul>
	</nav>
	<div id="sponsors" class="container">
	    <div id="sponsorholder">
	    	<div class="col-md-3 col-sm-3 col-xs-3 text-center">
		        <%= link_to (image_tag "patreon2.png", :alt => "Patreon Page"), "http://www.patreon.com/ad2l", :target => "_blank" %>
		    </div>
		    <div class="col-md-6 col-sm-6 col-xs-6 text-center">
			    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
				<!-- AD2L ad -->
				<ins class="adsbygoogle"
				     style="display:inline-block;width:320px;height:100px"
				     data-ad-client="ca-pub-5748298844009208"
				     data-ad-slot="7518176970"></ins>
				<script>
				(adsbygoogle = window.adsbygoogle || []).push({});
				</script>
		    </div>
		    <div class="col-md-3 col-sm-3 col-xs-3 text-center">
		        <%= link_to image_tag("S5_600x400_1.png", :alt => "Season 5 AD2L_S5_Invitational_Ticket_664x362"), 'http://www.dota2.com/store/itemdetails/16052?r=258', :target => "_blank" %>
		    </div>

	    </div>
	</div>
	<div id="main" class="container">
		<%= render :partial => "layouts/flash_messages" %>
		<%= yield %>
	</div>
	<div id="copyright" class="container">
		<p>Copyright (c) 2014 AmateurDota2League.com. All rights reserved. | <a href="http://www.steampowered.com/">Powered by Steam</a></p>
	</div>
	<%= render :partial => "layouts/dialogs" %>
	<%= render :partial => "layouts/ga" %>
</body>
</html>
